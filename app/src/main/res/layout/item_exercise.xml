<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="150dp"
    android:layout_height="45dp">

    <ImageView
        android:id="@+id/imv_user_icon_exercise_fragment"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginStart="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@mipmap/ic_launcher_round" />

    <TextView
        android:id="@+id/tv_content_exercise_fragment"
        app:layout_constraintBottom_toBottomOf="@+id/imv_user_icon_exercise_fragment"
        app:layout_constraintLeft_toRightOf="@+id/imv_user_icon_exercise_fragment"
        app:layout_constraintTop_toTopOf="@+id/imv_user_icon_exercise_fragment"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_marginStart="10dp"
        android:background="@drawable/shape_solid_ll_gray_5"
        android:gravity="center_vertical"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:textSize="10sp"
        android:text="你要去三日游么" />

    <TextView
        app:layout_constraintBottom_toBottomOf="@+id/tv_content_exercise_fragment"
        app:layout_constraintLeft_toLeftOf="@+id/tv_content_exercise_fragment"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/shape_solid_btn_gold_5"
        android:gravity="center"
        android:textSize="8sp"
        android:text="旅游达人"
        android:textColor="#ffffff" />
</android.support.constraint.ConstraintLayout>